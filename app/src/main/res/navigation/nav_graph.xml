<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.ruibang.pointmeasuretoolsv6.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.ruibang.pointmeasuretoolsv6.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/cloudFragment"
        android:name="com.ruibang.pointmeasuretoolsv6.CloudFragment"
        android:label="云页面"
        tools:layout="@layout/fragment_cloud">
        <action
            android:id="@+id/action_cloudFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/AppFragment"
        android:name="com.ruibang.pointmeasuretoolsv6.AppFragment"
        android:label="应用"
        tools:layout="@layout/fragment_app" />
    <fragment
        android:id="@+id/MeFragment"
        android:name="com.ruibang.pointmeasuretoolsv6.MeFragment"
        android:label="我"
        tools:layout="@layout/fragment_me" />
